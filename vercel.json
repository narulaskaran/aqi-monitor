{
  "version": 2,
  "builds": [
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "typescript": true
      }
    },
    {
      "src": "client/vite.config.ts",
      "use": "@vercel/vite",
      "dest": ".vercel/output/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": ".vercel/output/static/$1"
    }
  ],
  "installCommand": "npm install && cd server && npm install",
  "buildCommand": "npm run build && cd client && npm run build",
  "headers": {
    "/(.*)": {
      "Access-Control-Allow-Origin": "*"
    }
  },
  "functions": {
    "api/[[route]].ts": {
      "memory": 128,
      "maxDuration": 5
    }
  }
}
