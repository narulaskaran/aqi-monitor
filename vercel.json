{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/dist/**/*", "server/prisma/**/*"]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/air-quality",
      "dest": "/api/air-quality.js"
    },
    {
      "src": "/api/verify",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/verify.js"
    },
    {
      "src": "/api/verify-code",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/verify-code.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
