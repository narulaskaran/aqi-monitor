{
  "version": 2,
  "builds": [
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/prisma/**/*"],
        "buildCommand": "cd server && npx prisma generate"
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd client && npm install && npm run build",
        "outputDirectory": "client/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "server/src/index.ts"
    },
    {
      "src": "/trpc/(.*)",
      "dest": "server/src/index.ts"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "^/(?:index.html)?$",
      "dest": "/index.html"
    },
    {
      "src": "^/(.*)\\.(?:js|css|ico|png|jpg|jpeg|svg|gif)$",
      "dest": "/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
