{
  "name": "aqi-monitor",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "vite build && npm run build:server",
    "build:server": "cd server && npm install && npm run build",
    "start": "cd server && npm start",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "cd server && npm run dev",
    "clean": "rm -rf dist server/dist",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "vercel-build": "npm run db:migrate && npm run build",
    "db:migrate": "cd server && npm run db:migrate",
    "db:migrate:prod": "cd server && npm run db:migrate:prod",
    "test:frontend": "vitest run",
    "test:backend": "cd server && npm test",
    "test": "npm run test:frontend && npm run test:backend"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@trpc/client": "^10.45.1",
    "@trpc/server": "^10.45.1",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.34.9",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "globals": "^16.5.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.483.0",
    "p-queue": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.4.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@shadcn/ui": "^0.0.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.13.11",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.1.4",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.48.0",
    "vite": "^5.1.4",
    "vitest": "^3.1.4"
  }
}
